<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/checkLayout"
        android:layout_width="70dp"
        android:padding="10dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="5dp"
        android:background="@color/fluor_pink"
        android:layout_centerVertical="true"
        android:layout_alignParentTop="true"
        android:layout_alignBottom="@+id/contentLayout">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_check"
            android:layout_gravity="center_vertical"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal" android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        android:layout_marginLeft="0dp"
        android:id="@+id/contentLayout">

        <LinearLayout
            android:layout_width="0dp"
            android:orientation="horizontal"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:background="@color/lighter_purple"
            android:visibility="visible"
            android:layout_weight="1">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/trackImage"
                android:src="@drawable/ic_headphones"
                android:layout_marginStart="10dp"
                android:layout_gravity="center" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">
                <com.shudder.custom.ShudderTextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="New Text"
                    android:id="@+id/trackTitle"
                    android:gravity="center_vertical"
                    android:layout_marginStart="15dp"
                    android:textColor="@color/fluor_pink"
                    android:textSize="15sp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:layout_weight="1" />

                <com.shudder.custom.ShudderTextView
                    android:layout_width="fill_parent"
                    android:layout_height="32dp"
                    android:text="New Text"
                    android:id="@+id/artistName"
                    android:gravity="center_vertical"
                    android:layout_marginStart="15dp"
                    android:textColor="@color/fluor_pink"
                    android:textSize="14sp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:layout_weight="1" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="60dp"
            android:layout_height="fill_parent"
            android:background="@color/lighter_purple"
            android:id="@+id/addToPlaylistLayout">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="15dp"
                android:id="@+id/addToPlaylistBtn"
                android:layout_gravity="center"
                android:src="@drawable/ic_plus"
                android:layout_weight="1" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
