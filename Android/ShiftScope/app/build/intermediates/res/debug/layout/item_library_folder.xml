<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="50dp"
    android:padding="10dp"
    android:background="@color/lighter_purple"
    android:paddingEnd="10dp">


    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/folderImage"
        android:layout_alignParentTop="false"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_folder"
        android:layout_marginStart="10dp" />

    <com.shudder.custom.ShudderTextView
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:text="New Text"
        android:id="@+id/folderTitle"
        android:gravity="center_vertical"
        android:layout_alignTop="@+id/folderImage"
        android:layout_toRightOf="@+id/folderImage"
        android:layout_toEndOf="@+id/folderImage"
        android:layout_marginStart="15dp"
        android:layout_centerVertical="true"
        android:textColor="@color/fluor_pink"
        android:textSize="15dp"
        android:ellipsize="end"
        android:singleLine="true" />
</RelativeLayout>
