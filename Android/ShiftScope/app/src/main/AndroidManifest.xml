<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.shudder" >
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@drawable/shudder_icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.shudder.views.activities.MainActivity"
            android:logo="@drawable/logo_shudder"
            android:theme="@style/CustomActionBarTheme">
        </activity>

        <activity
            android:name="com.shudder.views.activities.LoginActivity"
            android:logo="@drawable/logo_shudder"
            android:theme="@style/CustomActionBarTheme"
            android:windowSoftInputMode="adjustResize"
            android:noHistory="true">
        </activity>

        <activity
            android:name="com.shudder.views.activities.RegisterActivity"
            android:logo="@drawable/logo_shudder"
            android:theme="@style/CustomActionBarTheme"
            android:windowSoftInputMode="adjustResize"
            android:noHistory="true">
        </activity>
        <activity
            android:name="com.shudder.views.activities.SelectDeviceActivity"
            android:label="@string/app_name"
            android:theme="@style/CustomActionBarTheme">
        </activity>
        <activity
            android:name="com.shudder.views.activities.OpeningActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
