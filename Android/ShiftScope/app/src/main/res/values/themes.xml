<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- the theme applied to the application or activity -->
    <style name="CustomActionBarTheme"
        parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/ShudderActionBar</item>

        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/ShudderActionBar</item>
        <item name="colorControlNormal">#c5c5c5</item>
        <item name="colorControlActivated">@color/fluor_pink</item>
        <item name="colorControlHighlight">@color/fluor_pink</item>
    </style>

    <!-- ActionBar styles -->

    <style name="ShudderActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:customNavigationLayout">@layout/action_bar</item>
        <item name="android:background">@color/lighter_purple</item>
        <!-- Support library compatibility -->
        <item name="background">@color/lighter_purple</item>
        <item name="customNavigationLayout">@layout/action_bar</item>
    </style>

    <style name="MyActionBar"
        parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/lighter_purple</item>

        <!-- Support library compatibility -->
        <item name="background">@color/lighter_purple</item>
    </style>
</resources>