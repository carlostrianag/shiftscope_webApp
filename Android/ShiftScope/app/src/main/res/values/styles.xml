<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">

    </style>

    <style name="ShudderButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginTop">7dp</item>
        <item name="android:bottomRightRadius">10dp</item>
        <item name="android:bottomLeftRadius">10dp</item>
        <item name="android:background">@drawable/radius_corners</item>
        <item name="android:textColor">@color/fluor_pink</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
    </style>

    <style name="ShudderEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginTop">7dp</item>
        <item name="android:bottomRightRadius">10dp</item>
        <item name="android:bottomLeftRadius">10dp</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:textColorHint">#FFF</item>
        <item name="android:background">@drawable/radius_corners_fluor_pink</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
    </style>

</resources>
